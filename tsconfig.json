{
  "compilerOptions": {
    "lib": ["es2015"],
    "module": "CommonJS",
    "target": "es6",
    "outDir": "./build",
    "moduleResolution": "node",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": true,
    "incremental": true
  },

  "include": ["./src"],
  "exclude": ["./build", "./node_modules", "./public", "./tests"]
}
